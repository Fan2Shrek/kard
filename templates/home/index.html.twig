{% extends 'base.html.twig' %}

{% block title %}Accueil !{% endblock %}

{% block body %}
    <article class='home'>
        {# Background icons #}
        <header>
            <twig:UX:Icon name="ri:poker-spades-line" class="animate-float-slow spade" color="white" />
            <twig:UX:Icon name="ri:heart-line" class="animate-float-medium heart" color="white" />
            <twig:UX:Icon name="ri:poker-diamonds-line" class="animate-float-fast diamond" color="white" />
            <twig:UX:Icon name="ph:club" class="animate-float-medium club" color="white" />
        </header>

        <main>
            <twig:ui:ColorsHeader />
            <h1>Bienvenue sur Kard</h1>
            <p>Le jeu de cartes en ligne</p>
            <div class="links">
                {% if app.user %}
                    <twig:LinkButton
                        :href="path('create')"
                        text="Lancer une partie"
                        iconLeft="ri:play-circle-line"
                        variant="success"
                    />
                    <twig:LinkButton
                        :href="path('app_logout')"
                        text="Se déconnecter"
                        iconLeft="ic:outline-logout"
                        variant="danger"
                    />
                {% else %}
                    <twig:LinkButton
                        :href="path('app_login')"
                        text="Se connecter"
                        iconLeft="ic:outline-login"
                        variant="success"
                    />
                {% endif %}
            </div>
        </main>

        <footer>
            <div class="footer-title">
                <twig:UX:Icon name="lucide:users" color="white" />
                <h2>Parties en cours</h2>
            </div>

            {% if currentGames is not empty %}
                <table>
                    <thead>
                        <tr>
                            <th>Mode de jeu</th>
                            <th>Propriétaire</th>
                            <th>Joueurs</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for game in currentGames %}
                            <tr>
                                <td>{{ game.gameMode.value.value|capitalize }}</td>
                                <td>{{ game.owner.username }}</td>
                                <td>{{ game.players.count }}</td>
                                <td>
                                    <twig:LinkButton
                                        :href="path('waiting', {id: game.id})"
                                        text="Rejoindre"
                                        iconLeft="ri:arrow-right-s-line"
                                        size="small"
                                    />
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>Il n'y a aucune partie en cours</p>
            {% endif %}
        </footer>
    </article>
{% endblock %}
